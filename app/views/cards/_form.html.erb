<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> _('prohibited this card from being saved:')</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :side1, _('Seite 1') %><br />
    <%= f.text_field :side1 %>
  </div>
  <div class="field">
    <%= f.label :side2, _('Seite 2') %><br />
    <%= f.text_field :side2 %>
  </div>
  <div class="actions">
    <%= f.submit _('speichern') %>
  </div>
<% end %>
